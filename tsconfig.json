{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "/node_modules/",
        "**/*.spec.*"
    ]
}
